<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <!-- a SessionFactory instance listed as /jndi/name -->
    <session-factory>

        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/bms</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.pool_size">20</property>

        <!-- Create or Update the table -->
        <property name="hbm2ddl.auto">update</property>

        <!-- MySQL Dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Optional settings -->
        <property name="show_sql">true</property> <!-- prints all sql stmts executed by hibernate -->
        <property name="format_sql">true</property><!-- format sql stmts executed by hibernate -->

        <!-- Cache settings -->
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
        <property name="hibernate.cache.provider_class">net.sf.ehcache.hibernate.EhCacheProvider</property>


        <mapping class="com.jspiders.project.bms.Movie"/>
        <mapping class="com.jspiders.project.bms.main.Auditorium"/>
        <mapping class="com.jspiders.project.bms.main.AudiAddress"/>
        <mapping class="com.jspiders.project.bms.main.Shows"/>

    </session-factory>

</hibernate-configuration>